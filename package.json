{
  "name": "advent-of-code",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.14.4",
  "scripts": {
    "clean": "turbo clean && git clean -xdf node_modules",
    "codegen": "turbo generate",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "dev": "turbo dev --"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@turbo/gen": "^2.5.8",
    "turbo": "^2.5.8",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
